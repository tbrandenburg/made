{
  "name": "made",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev:frontend",
    "dev:frontend": "npm --workspace packages/frontend run dev",
    "build": "npm run build:frontend",
    "build:frontend": "npm --workspace packages/frontend run build",
    "test": "echo 'Use make test for Python backend tests'",
    "test:watch": "echo 'Use make test for Python backend tests'",
    "test:e2e": "playwright test",
    "lint": "npm --workspace packages/frontend run lint",
    "format": "npm --workspace packages/frontend run format"
  },
  "devDependencies": {
    "@playwright/test": "^1.43.1",
    "npm-run-all": "^4.1.5",
    "wait-on": "^7.2.0"
  }
}
