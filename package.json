{
  "name": "made",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:backend dev:frontend",
    "dev:backend": "npm --workspace packages/backend run dev",
    "dev:frontend": "npm --workspace packages/frontend run dev",
    "build": "npm-run-all build:backend build:frontend",
    "build:backend": "npm --workspace packages/backend run build",
    "build:frontend": "npm --workspace packages/frontend run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "lint": "npm --workspace packages/frontend run lint",
    "format": "npm --workspace packages/frontend run format"
  },
  "devDependencies": {
    "@playwright/test": "^1.43.1",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5"
  },
  "jest": {
    "rootDir": ".",
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "testEnvironment": "node",
    "moduleDirectories": [
      "node_modules",
      "packages"
    ]
  }
}
